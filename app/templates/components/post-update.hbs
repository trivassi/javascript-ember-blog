{{#if updatePostForm}}
  <h4>Update {{post.author}}'s post</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title"}}
      </div>
      <div class="form-group">
        <label for="content">Content</label>
        {{input value=content id="content"}}
      </div>
      <div class="form-group">
        <label for="date">Date</label>
        {{input value=date id="date" type="datetime-local"}}
        <!-- type="date"  type="datetime-local" -->
      </div>
      <div class="form-group">
        <label for="image">Image</label>
        {{input value=image id="image"}}
      </div>
      <button {{action 'update' post}}>Save</button>
    </form>
  </div>
{{else}}
<button {{action 'updatePostForm'}}>Update</button>
{{/if}}
