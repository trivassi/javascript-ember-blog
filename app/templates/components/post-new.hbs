{{#if addNewPost}}
  <h2>Add New Post </h2>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title"}}
      </div>
      <div class="form-group">
        <label for="content">Content</label>
        {{input value=content id="content"}}
      </div>
      <div class="form-group">
        <label for="date">Date</label>
        {{input value=date id="date"}}
        <!-- type="date"  type="datetime-local" -->
      </div>
      <div class="form-group">
        <label for="image">Image</label>
        {{input value=image id="image"}}
      </div>
      <button {{action 'savePost1'}}>Save</button>
    </form>
  </div>
{{else}}
<button {{action 'postFormShow'}}>New Post</button>
{{/if}}
